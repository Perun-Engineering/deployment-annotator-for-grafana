{
  "branches": ["main"],
  "repositoryUrl": "https://github.com/Perun-Engineering/deployment-annotator-for-grafana",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "type": "docs",
            "release": "patch"
          },
          {
            "type": "style",
            "release": false
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "test",
            "release": false
          },
          {
            "type": "build",
            "release": "patch"
          },
          {
            "type": "ci",
            "release": false
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "scope": "no-release",
            "release": false
          },
          {
            "breaking": true,
            "release": "major"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "üéØ Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "perf",
              "section": "‚ö° Performance Improvements"
            },
            {
              "type": "revert",
              "section": "‚è™ Reverts"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            },
            {
              "type": "style",
              "section": "üíÑ Styles",
              "hidden": true
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è Code Refactoring"
            },
            {
              "type": "test",
              "section": "‚úÖ Tests",
              "hidden": true
            },
            {
              "type": "build",
              "section": "üèóÔ∏è Build System"
            },
            {
              "type": "ci",
              "section": "üë∑ CI/CD",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "üîß Maintenance",
              "hidden": true
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n\n<!-- semantic-release-generated changelog -->"
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i 's/^version:.*/version: ${nextRelease.version}/' helm/deployment-annotator-controller/Chart.yaml && sed -i 's/^appVersion:.*/appVersion: \"${nextRelease.version}\"/' helm/deployment-annotator-controller/Chart.yaml"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "helm/deployment-annotator-controller/Chart.yaml",
            "label": "Helm Chart Metadata"
          },
          {
            "path": "CHANGELOG.md",
            "label": "Changelog"
          }
        ],
        "addReleases": "bottom",
        "successComment": "üéâ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version [${nextRelease.version}](${releases.filter(release => !!release.name)[0].url}) üéâ\n\n**Release Notes:**\n${nextRelease.notes}\n\n**Installation:**\n```bash\nhelm install deployment-annotator-controller oci://ghcr.io/perun-engineering/deployment-annotator-for-grafana/helm/deployment-annotator-controller --version ${nextRelease.version}\n```",
        "failComment": "‚ùå The release from branch `${branch.name}` had failed due to the following errors:\n- ${errors.map(err => err.message).join('\\n- ')}",
        "releasedLabels": [
          "released<%= nextRelease.channel ? `-${nextRelease.channel}` : '' %>"
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "helm/deployment-annotator-controller/Chart.yaml"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
